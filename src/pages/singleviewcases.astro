<style>
  /* --- PAGE-SPECIFIC STYLES --- */

  .page-content {
    margin: 11rem; /* flyttet fra body til denne wrapper, så Header bevarer sit layout */
  }

  @media (max-width: 768px) {
    .cta {
      background-color: #3a544a;
      color: white;
      padding: 15px 25px;
      text-decoration: none;
      font-size: 18px;
      border-radius: 8px;
      transition: background-color 0.25s ease; /* smooth hover */
      display: inline-block;
    }

    .cta:hover {
      background-color: #ff815c;
    }

    /* GRID SECTIONS MOBILE VERSION */
    .forside-sections {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      padding: 2px;
    }
  }

  /* Desktop-focused layout, images og spacing */

  .page-content {
    max-width: 1100px;
    margin: 6rem auto 4rem;
    padding: 0 2rem;
    box-sizing: border-box;
    color: #151514;
  }

  .After {
    margin-top: 110px;
  }

  .Nordiclampsptext {
    margin-left: 700px;
  }

  .page-content h1 {
    font-size: 2.6rem;
    line-height: 1.05;
    color: #264d43;
    margin: 0 0 1.25rem 0;
    font-weight: 400;
  }

  .page-content p {
    font-size: 1rem;
    line-height: 1.6;
    color: #333;
  }

  .page-content a {
    color: inherit;
  }

  a {
    margin-left: 700px;
  }

  /* Gør billeder responsive og med afrundede hjørner */
  .page-content img {
    width: 100%;
    height: auto;
    display: block;
    margin: 1.25rem 0;
    border-radius: 8px;
    object-fit: cover;
  }

  /* CTA */
  .cta {
    display: inline-block;
    background-color: #274d44;
    color: #fff;
    padding: 12px 26px;
    text-decoration: none;
    font-size: 16px;
    border-radius: 8px;
    transition: background-color 0.2s ease;
  }
  .cta:hover {
    background-color: #1f3f37;
  }

  /* --- Desktop rules (stor skærm) --- */
  @media (min-width: 1024px) {
    /* Læg lidt plads til venstre for at give room til din left-decor/sidebar i Layout */
    .page-content {
      margin-left: 220px; /* justér hvis din sidebar er bredere/smaller */
      padding-right: 3rem;
    }

    /* Gør første tekstblok (title/intro) og hero billede fuldbredde over kolonner */
    .page-content > div:first-of-type {
      width: 100%;
      margin-bottom: 0.5rem;
    }

    /* Hero-billede (første img) fylder fuld bredde */
    .page-content > img:first-of-type {
      width: 100%;
      margin-top: 1.5rem;
      margin-bottom: 1.5rem;
    }

    /* To-kolonne for Before / After sektion (de to på hinanden følgende divs) */
    .page-content {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      align-items: flex-start;
    }

    /* Grundregel: alle direkte children default fuld bredde */
    .page-content > div,
    .page-content > img {
      flex: 1 1 100%;
    }

    /* Slip de to "Before" og "After" divs side-by-side */
    .page-content > div:nth-of-type(3),
    .page-content > div:nth-of-type(4) {
      flex: 1 1 calc(50% - 1rem);
    }

    /* Hvor du vil vise et billede ved siden af tekst (f.eks. senere sektioner) */
    .page-content > div:nth-of-type(5) {
      display: flex;
      gap: 2rem;
      align-items: flex-start;
    }
    .page-content > div:nth-of-type(5) img {
      flex: 0 0 48%;
      margin: 0;
    }
    .page-content > div:nth-of-type(5) p {
      flex: 1 1 48%;
    }

    /* Return-knap styling (hvis det er en .return class, ellers brug .cta eller giv knappen class) */
    a.return {
      display: inline-block;
      background: #3b1f17;
      color: #fff;
      padding: 8px 14px;
      border-radius: 8px;
      text-decoration: none;
      margin-top: 2rem;
    }
  }

  /* --- Mobil (bevarer dine tidligere mobile regler) --- */
  @media (max-width: 1023px) {
    .page-content {
      margin: 6rem 1rem 3rem;
      padding: 0 1rem;
    }

    .page-content h1 {
      font-size: 1.8rem;
    }

    .cta {
      padding: 12px 20px;
      font-size: 16px;
    }

    .Nordiclampsptext {
      margin-left: 2px;
      margin-top: 100px;
    }
  }
</style>
